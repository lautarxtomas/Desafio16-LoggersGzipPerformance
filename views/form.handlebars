{{#if username}}
<div class="bg-success p-4 mb-4 d-flex justify-content-between align-items-center" style="--bs-bg-opacity: .5;">
	<h1>Bienvenido {{username}}</h1>
	<form action="/logout" method="POST">
		<div>
			<input class="btn btn-success" type='submit' value='Cerrar sesión' />
		</div>
	</form>
</div>
{{/if}}

 <!-- Formulario con productos random de FakerJS -->
    <h1>Mis productos</h1>
    <!-- Contenedor de productos -->
